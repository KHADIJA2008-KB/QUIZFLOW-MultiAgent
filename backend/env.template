# QuizFlow Enhanced Multi-Agent System Configuration
# Copy this file to .env and fill in your API keys and configuration

# === Core Configuration ===
HOST=0.0.0.0
PORT=8000
DEBUG=true

# === LLM API Configuration ===
# OpenAI API (Primary)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini API (Alternative)
GEMINI_API_KEY=your-gemini-api-key-here

# Preferred LLM: 'openai' or 'gemini'
PREFERRED_LLM=openai

# === Firebase Configuration ===
# Firebase service account key file path
FIREBASE_SERVICE_ACCOUNT_PATH=path/to/firebase-service-account.json

# === Google Services Configuration ===
# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/google-calendar-credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=token.json

# Google Analytics
GOOGLE_ANALYTICS_CREDENTIALS_PATH=path/to/google-analytics-credentials.json
GA4_PROPERTY_ID=your-ga4-property-id

# === Twilio Configuration ===
# Twilio account credentials
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# === CrewAI Configuration ===
# CrewAI API key (if using hosted version)
CREWAI_API_KEY=your-crewai-api-key

# === Database Configuration (Optional) ===
# If using external database instead of local files
DATABASE_URL=postgresql://user:password@localhost:5432/quizflow
REDIS_URL=redis://localhost:6379

# === Security Configuration ===
# JWT secret for user authentication
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_HOURS=24

# === Email Configuration (Optional) ===
# For email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# === Additional Configuration ===
# Logging level
LOG_LEVEL=INFO

# Maximum number of questions per quiz
MAX_QUESTIONS=30

# Default difficulty level
DEFAULT_DIFFICULTY=Medium

# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=60

# Rate limiting
RATE_LIMIT_PER_MINUTE=100

# === Development Configuration ===
# Enable development features
ENABLE_DEBUG_ENDPOINTS=true
ENABLE_MOCK_APIS=false

# === Deployment Configuration ===
# For production deployment
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
